

    <ScrollView android:fitsSystemWindows="true" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary" android:id="@+id/login_form">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingRight="24dp" android:paddingLeft="24dp" android:paddingTop="56dp" android:orientation="vertical">
        <ImageView android:layout_height="72dp" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginBottom="24dp" android:src="@drawable/logo"/>

        <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" android:visibility="gone" />


        <android.support.design.widget.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:hint="Email" android:inputType="textEmailAddress" android:id="@+id/input_email"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
            android:editable="false" />
    <!--</android.support.design.widget.TextInputLayout>-->

    <android.support.design.widget.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
        <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:hint="Password" android:inputType="textPassword" android:id="@+id/input_password"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff" />
    <!--</android.support.design.widget.TextInputLayout>-->
        <android.support.v7.widget.AppCompatButton android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginBottom="24dp" android:layout_marginTop="24dp" android:id="@+id/btn_login" android:text="Login" android:padding="12dp"
            android:background="#ffffff" />
        <TextView android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:layout_marginBottom="24dp" android:id="@+id/link_signup" android:text="No account yet? Create one" android:textSize="16sp" android:gravity="center" android:clickable="true" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginBottom="24dp"
            android:id="@+id/forgot_login_link"
            android:text="Forgot Login?"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    </ScrollView>

